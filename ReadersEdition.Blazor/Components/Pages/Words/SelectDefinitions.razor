                <RadzenDropDown TItem="List<string>" @bind-Value="Word.DisplayDefinitions" Data="Word.AllDefinitions" Multiple="true"></RadzenDropDown>
            </Template>
        </RadzenDataGridColumn>
        </Columns>
    </RadzenDataGrid>
