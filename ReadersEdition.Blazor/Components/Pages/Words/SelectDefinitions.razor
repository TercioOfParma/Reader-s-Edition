
@if(Words != null)
{
    <RadzenDataGrid Data="Words">
        <RadzenDataGridColumn Property="Word">
        </RadzenDataGridColumn>
        <RadzenDataGridColumn Title="Select Definitions"> 
            <Template Context="Word">
                <RadzenDropDown @bind-Value="Word.DisplayDefinitions" Data="Word.AllDefinitions" Multiple="true"></RadzenDropDown>
            </Template>
        </RadzenDataGridColumn>>
    </RadzenDataGrid>
}
@code {
    [Inject]
    public IMediator Mediator {get; set;}
    [Parameter]
    public List<WordInstance> Words {get; set;}
}